# vim: ft=ruby

watch('pooldin/assets/style/.*\.less$') { |md|
    system("make css-debug")
}

watch('pooldin/assets/script/.*\.coffee$') { |md|
    system("make js-debug")
}

watch('pooldin/assets/lib/.*\.js$') { |md|
    system("make js-lib-debug")
}

watch('pooldin/assets/lib/.*\.css$') { |md|
    system("make css-debug")
}
